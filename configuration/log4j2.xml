<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="baseDir">logs</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                pattern="%d{yyyy-MM-dd HH:mm:ss} %20X{session.remote-address} %20X{session.username} %-5p %c{1}:%L - %m%n" />
        </Console>

        <RollingFile name="File" filename="${baseDir}/daiad.log"
            filepattern="${baseDir}/daiad-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout
                pattern="%d{yyyy-MM-dd HH:mm:ss} %20X{session.remote-address} %20X{session.username} %-5p %c{1}:%L - %m%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>

        <RollingFile name="AmphiroSessionFile" filename="${baseDir}/amphiro-session.log"
            filepattern="${baseDir}/amphiro-session-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss};%m%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="100 MB" />
            </Policies>
            <DefaultRolloverStrategy max="100" />
        </RollingFile>

        <RollingFile name="AmphiroMeasurementFile" filename="${baseDir}/amphiro-measurement.log"
            filepattern="${baseDir}/amphiro-measurement-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss};%m%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="100 MB" />
            </Policies>
            <DefaultRolloverStrategy max="100" />
        </RollingFile>

        <RollingFile name="AmphiroSessionMemberFile" filename="${baseDir}/amphiro-session-member.log"
            filepattern="${baseDir}/amphiro-session-member-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss};%m%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="100 MB" />
            </Policies>
            <DefaultRolloverStrategy max="100" />
        </RollingFile>


        <RollingFile name="AmphiroSessionIgnoreFile" filename="${baseDir}/amphiro-session-ignore.log"
            filepattern="${baseDir}/amphiro-session-ignore-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss};%m%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="100 MB" />
            </Policies>
            <DefaultRolloverStrategy max="100" />
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="AmphiroSessionLogger" level="INFO" additivity="false">
            <AppenderRef ref="AmphiroSessionFile" />
        </Logger>

        <Logger name="AmphiroMeasurementLogger" level="INFO"
            additivity="false">
            <AppenderRef ref="AmphiroMeasurementFile" />
        </Logger>

        <Logger name="AmphiroSessionMemberLogger" level="INFO"
            additivity="false">
            <AppenderRef ref="AmphiroSessionMemberFile" />
        </Logger>

        <Logger name="AmphiroSessionIgnoreLogger" level="INFO"
            additivity="false">
            <AppenderRef ref="AmphiroSessionIgnoreFile" />
        </Logger>

        <Logger name="org.hibernate.SQL" level="WARN"></Logger>

        <Root level="INFO">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Root>
    </Loggers>
</Configuration>
