{
  "name": "daiad-web-client",
  "description": "DAIAD Project Web Application for DAIAD@home and DAIAD@utility",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/DAIAD/home-web.git"
  },
  "dependencies": {
    "react": "~0.14.6",
    "react-dom": "~0.14.6",
    "react-bootstrap": "~0.28.2",
    "flux": "~2.1.1",
    "events": "~1.1.0",
    "object-assign": "~4.0.1",
    "keymirror": "~0.1.1",
    "jquery": "~2.2.0",
		"echarts": "^3.0.0",
    "react-intl": "^2.0.0-beta-2",
		"react-router": "^1.0.3",
		"history": "^1.17.0"
  },
	"browserify": {
		"transform": [
			[
				"reactify",
				{
					"es6":true
				}
			]
		],
		"insertGlobals":true,
		"debug":true
	},
  "scripts": {
    "build": "grunt build",
		"watch": "watchify -o src/main/resources/public/assets/js/build/home/bundle.js -d src/main/resources/public/assets/js/src/home/main.js -v"
  },
  "devDependencies": {
    "bower": "~1.7.2",
    "grunt": "~0.4.5",
    "grunt-cli": "~0.1.13",
    "grunt-contrib-clean": "~0.7.0",
    "grunt-contrib-jshint": "~0.11.3",
    "grunt-browserify": "~4.0.1",
    "grunt-contrib-uglify": "~0.11.0",
    "grunt-contrib-copy": "~0.8.2",
    "jshint-stylish": "~2.1.0",
    "grunt-jsxhint": "~0.6.0",
    "react-tools": "~0.13.3",
    "browserify": "~13.0.0",
    "babelify": "~7.2.0",
    "babel-preset-react": "~6.3.13",
    "reactify": "~1.1.1",
    "envify": "~3.4.0",
    "exorcist": "~0.4.0",
    "watchify": "~3.7.0",
    "grunt-exorcise": "~2.1.0",
    "grunt-contrib-watch": "~0.6.1",
    "grunt-sync": "~0.5.1",
    "browserify-shim": "~3.8.12",
    "babel": "~6.3.26",
    "babel-core": "~6.4.5",
    "babel-cli": "~6.4.5",
    "babel-plugin-react-intl": "~2.0.0",
    "babel-preset-es2015": "~6.3.13"
  },
  "babelify" :{
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": [
      ["react-intl", {
         "messagesDir": "./src/main/resources/public/assets/js/src/utility/i18n/",
         "enforceDescriptions": false
      }]
    ]
  }
}
