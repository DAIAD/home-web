{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script",
    "ecmaFeatures": {
      "jsx": true
    },
    "experimentalObjectRestSpread": true
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "plugins" : ["eslint-plugin-react"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "react/prop-types" : "off",
    "react/no-find-dom-node" : "off",
    "no-console": ["warn", { "allow": ["assert", "warn", "error"]}],
    "no-unused-vars": ["warn", {"args": "none"}]
  },
  "globals": {
    "properties": true,
    "_": true
  }
}
